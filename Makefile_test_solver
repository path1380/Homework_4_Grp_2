FC = gfortran
LD = gfortran
F90FLAGS = -fbounds-check -Wall -fbacktrace -g
OBJECTS = type_defs.o quad_1dmod.o InputControl.o lgl.o leg_funs.o approx_funs.o mat_builder.o diff_coeff.o coeff.o Runge_Kutta_4.o solver.o test_solver.o
EXECUTABLE = test_solver.x

.PHONY: clean
$(EXECUTABLE): $(OBJECTS)
	$(LD) -o $(EXECUTABLE) $(OBJECTS)
	./$(EXECUTABLE)
%.o : %.f90
	$(FC) $(F90FLAGS) -c $<
clean:
	rm -f $(OBJECTS) $(EXECUTABLE)
